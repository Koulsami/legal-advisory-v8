# Legal Advisory System v8.0 - Environment Variables
# Copy this to .env and update with your actual values

# ============================================
# Application
# ============================================
APP_NAME="Legal Advisory System v8.0"
DEBUG=false

# ============================================
# Database Connections
# ============================================

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=singapore_legal_v8

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=legal_advisory_v8
POSTGRES_USER=legal_user
POSTGRES_PASSWORD=change_this_in_production

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change_this_in_production

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# AI API Keys
# ============================================
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Security
# ============================================
SECRET_KEY=generate_random_string_for_production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Performance Tuning
# ============================================
MAX_WORKERS=4
CACHE_TTL=3600

# ============================================
# Research-Based Settings
# ============================================

# Three-Stage Retrieval Weights
RETRIEVAL_STAGE1_WEIGHT=0.3  # BM25
RETRIEVAL_STAGE2_WEIGHT=0.3  # Semantic
RETRIEVAL_STAGE3_WEIGHT=0.4  # Legal Classification

# BM25 Parameters (tuned for legal documents)
BM25_K1=1.5
BM25_B=0.75

# Verification Thresholds
HALLUCINATION_THRESHOLD=0.1
TEXT_ALIGNMENT_THRESHOLD=0.7
